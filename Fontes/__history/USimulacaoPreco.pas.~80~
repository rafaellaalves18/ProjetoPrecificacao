  FireDAC.Stan.Async, FireDAC.DApt, Data.DB, FireDAC.Comp.DataSet,
  FireDAC.Comp.Client, Vcl.ComCtrls;

type
  TFrmSimulacaoPreco = class(TForm)
    pnlsimulacao: TPanel;
    GroupBox1: TGroupBox;
    Panel19: TPanel;
    PRECO_COMPRA: TDBEdit;
    Panel2: TPanel;
    PERC_ICMS: TDBEdit;
    Panel6: TPanel;
